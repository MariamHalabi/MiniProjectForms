<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="MiniProjectMaui.Views.NewTaskPopUp">

    <StackLayout Margin="30,200,30,200" BackgroundColor="#667d94" Padding="10">
        <Label Text="New Task" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"/>
        <Entry Placeholder="Task Title" x:Name="TaskTitleEntry" />
        <Entry Placeholder="Task Description" x:Name="TaskDescriptionEntry"/>
        <DatePicker x:Name="DueDatePicker" />
        <Button Text="Save" Clicked="SaveButton_Clicked" Style ="{StaticResource ButtonStyle}"  Margin="0,30,0,0" BackgroundColor="White" TextColor="#667d94" HorizontalOptions="End"/>
    </StackLayout>
</ContentPage>
